import socket

def connect_to_phone(device_address):
    port = 1  # RFCOMM port number, adjust if needed

    sock = socket.socket(socket.AF_BLUETOOTH, socket.SOCK_STREAM, socket.BTPROTO_RFCOMM)
    sock.connect((device_address, port))

    print("Connected successfully!")
    # Add your communication logic here

    sock.close()
    print("Connection closed.")

if __name__ == "__main__":
    phone_address = "8C:6A:3B:A3:9F:BD"  # Replace with your phone's Bluetooth address
    print(f"Connecting to {phone_address}...")
    connect_to_phone(phone_address)
